<form method="post" class="mt-2" action="{{ path('app_admin_category_delete', {'uuid': category.uuid}) }}" onsubmit="return confirm('Are you sure you want to delete this category?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.uuid) }}">
    <button class="btn btn-sm btn-danger">{{ 'btn.delete'|trans }}</button>
</form>
