{% extends 'base.html.twig' %}

{% block og_title 'user.show.head.meta.title'|trans %}
{% block title 'user.show.head.meta.title'|trans %}

{% block content_id 'user-show' %}
{% block content %}
    <section>
        <div class="container">
            <div class="row mb-4">
                <div class="col">
                    <h1>{{ 'user.show.body.h1'|trans }}</h1>

                    <table class="table">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ user.id }}</td>
                        </tr>
                        <tr>
                            <th>Uuid</th>
                            <td>{{ user.uuid }}</td>
                        </tr>
                        <tr>
                            <th>Username</th>
                            <td>{{ user.username }}</td>
                        </tr>
                        <tr>
                            <th>Identity</th>
                            <td>{{ user.identity }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ user.email }}</td>
                        </tr>
                        <tr>
                            <th>PhoneNumber</th>
                            <td>{{ user.phoneNumber }}</td>
                        </tr>
                        <tr>
                            <th>Password</th>
                            <td>{{ user.password }}</td>
                        </tr>
                        <tr>
                            <th>IsActive</th>
                            <td>{{ user.isActive ? 'user.is_active'|trans : 'user.is_not_active'|trans }}</td>
                        </tr>
                        <tr>
                            <th>Roles</th>
                            <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                        </tr>
                        <tr>
                            <th>CreatedAt</th>
                            <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th>UpdatedAt</th>
                            <td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        </tbody>
                    </table>

                    <a href="{{ path('app_admin_user_index') }}">{{ 'link.admin.user.index'|trans }}</a>

                    <a href="{{ path('app_admin_user_edit', {'uuid': user.uuid}) }}">{{ 'link.admin.user.edit'|trans }}</a>

                    {{ include('user/admin/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
