<form method="post" class="mt-2" action="{{ path('app_admin_user_delete', {'uuid': user.uuid}) }}" onsubmit="return confirm('Are you sure you want to delete this user?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.uuid) }}">
    <button class="btn btn-sm btn-danger">{{ 'btn.delete'|trans }}</button>
</form>
