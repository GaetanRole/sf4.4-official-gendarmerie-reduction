<form method="post" class="mt-2" action="{{ path('app_admin_article_delete', {'slug': article.slug}) }}" onsubmit="return confirm('Are you sure you want to delete this article?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.slug) }}">
    <button class="btn btn-sm btn-danger">{{ 'btn.delete'|trans }}</button>
</form>
