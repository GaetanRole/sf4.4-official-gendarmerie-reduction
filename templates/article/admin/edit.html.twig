{% extends 'base.html.twig' %}

{% block og_title 'article.admin.edit.head.meta.title'|trans %}
{% block title 'article.admin.edit.head.meta.title'|trans %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" rel="stylesheet">
{% endblock %}

{% block content_id 'article-admin-edit' %}
{% block content -%}
    <section>
        <div class="container">
            <div class="row mb-4">
                <div class="col">
                    <h1>{{ 'article.admin.edit.body.h1'|trans }}</h1>

                    {{ include('article/admin/_form.html.twig') }}

                    <a href="{{ path('app_article_index') }}">{{ 'link.article.index'|trans }}</a>

                    {{ include('article/admin/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js"></script>
    <script>
        $('select[data-select]').select2();
    </script>
{% endblock %}
