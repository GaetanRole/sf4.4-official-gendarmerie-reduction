<form method="post" action="{{ path('app_admin_brand_delete', {'uuid': brand.uuid}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ brand.uuid) }}">
    <button class="btn">{{ 'btn.delete'|trans }}</button>
</form>
