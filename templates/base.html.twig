<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>
    <meta charset="UTF-8">

    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <meta name="author" content="GaÃ«tan RolÃ©-Dubruille">
    <meta name="description" content="{% block description 'base.head.meta.description'|trans %}">
    <!--[if IE]><meta http-equiv='X-UA-Compatible' content='IE=edge,chrome=1'><![endif]-->

    <title>PromoGend - {% block title 'base.head.meta.title'|trans %}</title>

    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
    {% endblock %}

    <link rel="icon" type="image/x-icon" href="{{ asset('assets/images/favicon.ico') }}">
    <link rel="shortcut icon" type="image/x-icon" href="{{ asset('assets/images/favicon.ico') }}">
    <link rel="apple-touch-icon" type="image/x-icon" href="{{ asset('assets/images/favicon.ico') }}">
</head>
<body>
<header>
    {%- block header -%}
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" href="{{ path('app_default_index') }}" title="{{ 'home.link.back.title'|trans }}">
                <img src="{{ asset('assets/images/gendarmerie-logo.png') }}" width="26" height="30" class="d-inline-block align-top m-1 mr-2" alt="Gendarmerie Logo">
                <img src="{{ asset('assets/images/promogend-logo.png') }}" alt="PromoGend Logo">
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_default_index') }}" title="{{ 'base.header.nav.home.link.title'|trans }}">{{ 'base.header.nav.home.link'|trans }} <span class="sr-only">{{ 'base.header.nav.current'|trans }}</span></a>
                    </li>
                    {%- if is_granted('ROLE_ADMIN') -%}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_admin_index') }}" title="{{ 'base.header.nav.admin.link.title'|trans }}">{{ 'base.header.nav.admin.link'|trans }}</a>
                        </li>
                    {%- endif -%}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_default_contact') }}" title="{{ 'base.header.nav.contact.link.title'|trans }}">{{ 'base.header.nav.contact.link'|trans }}</a>
                    </li>
                    {%- if is_granted('ROLE_USER') -%}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_logout') }}" title="{{ 'base.header.nav.logout.link.title'|trans }}">{{ 'base.header.nav.logout.link'|trans }}</a>
                        </li>
                    {%- else -%}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_login') }}" title="{{ 'base.header.nav.login.link.title'|trans }}">{{ 'base.header.nav.login.link'|trans }}</a>
                        </li>
                    {%- endif -%}
                    <li class="nav-item dropdown dropleft">
                        <a class="nav-link dropdown-toggle active" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fas fa-globe-americas fa-1x"></i></a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            {{ i18n_links(['fr', 'en'], app.request.attributes.get('_route'), app.request.attributes.get('_route_params'), app.request.locale) }}
                        </div>
                    </li>
                </ul>
            </div>
        </nav>
    {%- endblock -%}
</header>
<main id="{% block body_id 'base' %}">
    {% block body %}{% endblock %}
</main>
<footer class="footer bg-dark">
    {%- block footer -%}
        <div class="container"><div class="row text-center"><span class="text-white">Sticky footer content here.</span></div></div>
    {%- endblock -%}
</footer>

<!-- Kit's code from Font Awesome with unique ID -->
<script src="https://kit.fontawesome.com/8d75946265.js" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

{% block javascripts %}
{% endblock %}
</body>
</html>
