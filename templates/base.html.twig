<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>
    <meta charset="UTF-8">

    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <meta name="author" content="Gaëtan Rolé-Dubruille">
    <meta name="description" content="{% block description 'base.head.meta.description'|trans %}">
    <!--[if IE]><meta http-equiv='X-UA-Compatible' content='IE=edge,chrome=1'><![endif]-->

    <meta property="og:image" content="{% block og_image 'https://raw.githubusercontent.com/GaetanRole/sf4.4-official-gendarmerie-reduction/master/public/assets/images/gendarmerie-logo.png' %}">
    <meta property="og:title" content="PromoGend - {% block og_title 'base.head.meta.title'|trans %}">
    <meta property="og:description" content="{% block og_description 'base.head.meta.description'|trans %}">

    <title>PromoGend - {% block title 'base.head.meta.title'|trans %}</title>

    <!-- CSS Vendors -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset('assets/css/theme.css') }}">

    {% block stylesheets -%}
    {% endblock %}

    {{ include('_favicons.html.twig', with_context = false) }}
</head>
<body>
<header>
    {% block header -%}
        {{ include('_navbar.html.twig', {'currentRoute': app.request.attributes.get('_route')}, with_context = false) }}
    {%- endblock %}
</header>

<main id="main">
    {{ include('_flash_messages.html.twig', with_context = false) }}

    <div id="{% block content_id '' %}">
        {% block content %}
        {% endblock %}
    </div>
</main>

<footer class="background-gradient p-3">
    {% block footer -%}
        {{ include('_footer.html.twig', with_context = false) }}
    {%- endblock -%}
</footer>

<!-- Kit's code from Font Awesome with unique ID -->
<script src="https://kit.fontawesome.com/8d75946265.js" crossorigin="anonymous"></script>
<!-- JS Vendors -->
<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1-lts/dist/umd/popper.min.js" integrity="sha256-/ijcOLwFf26xEYAjW75FizKVo5tnTYiQddPZoLUHHZ8=" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
<script src="{{ asset('assets/js/app.min.js') }}"></script>

{% block javascripts -%}
{% endblock %}
</body>
</html>
