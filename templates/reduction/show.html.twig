{% extends 'base.html.twig' %}

{% block title %}{{ 'reduction.show.head.meta.title'|trans }}{% endblock %}

{% block body_id 'reduction-show' %}

{% block body %}
    <section>

        {% include 'default/_flash_messages.html.twig' %}

        <div class="container">
            <div class="row mb-4">
                <div class="col">
                    <h1>{{ 'reduction.show.body.h1'|trans }}</h1>

                    <table class="table">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ reduction.id }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ reduction.name }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ reduction.email }}</td>
                        </tr>
                        <tr>
                            <th>ClientIp</th>
                            <td>{{ reduction.clientIp }}</td>
                        </tr>
                        <tr>
                            <th>Title</th>
                            <td>{{ reduction.title }}</td>
                        </tr>
                        <tr>
                            <th>Slug</th>
                            <td>{{ reduction.slug }}</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{ reduction.description }}</td>
                        </tr>
                        <tr>
                            <th>Region</th>
                            <td>{{ reduction.region }}</td>
                        </tr>
                        <tr>
                            <th>Department</th>
                            <td>{{ reduction.department }}</td>
                        </tr>
                        <tr>
                            <th>City</th>
                            <td>{{ reduction.city }}</td>
                        </tr>
                        <tr>
                            <th>CreationDate</th>
                            <td>{{ reduction.creationDate ? reduction.creationDate|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th>IsBigDeal</th>
                            <td>{{ reduction.isBigDeal ? 'Yes' : 'No' }}</td>
                        </tr>
                        <tr>
                            <th>IsActive</th>
                            <td>{{ reduction.isActive ? 'Yes' : 'No' }}</td>
                        </tr>
                        </tbody>
                    </table>

                    <a href="{{ path('app_reduction_index') }}">{{ 'link.reduction.index'|trans }}</a>

                    <a href="{{ path('app_admin_adminreduction_edit', {'id': reduction.id}) }}">{{ 'link.admin.reduction.edit'|trans }}</a>

                    {{ include('admin/reduction/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
